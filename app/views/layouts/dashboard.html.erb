</head>
<body>

	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container-fluid">
				<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="brand" href="/">Quango Assurance</a>
				<div class="nav-collapse collapse">
					<p class="navbar-text pull-right">

						Logged in as <a data-target="#account_modal"  href="/users/edit" class="navbar-link" data-toggle="modal"><%= current_user.name %><span class="divider-vertical"></span></a> <%= link_to('Logout', destroy_user_session_path, :method => :get, :class => "navbar-link") %>
					</p>
					<ul class="nav">
						<%= nav_link 'Projects', '/project_list',{}, {:selected_class => 'active', :wrapper => 'li'} %>
						<% if !current_user.client %>
							<%= nav_link 'Clients', '/client_list',{}, {:selected_class => 'active', :wrapper => 'li'} %>
							<%= nav_link 'Bugherd Help', '/bugherd_help',{}, {:selected_class => 'active', :wrapper => 'li'} %>
						<% end %>
						<% if current_user.admin %>
							<%= nav_link 'User Management', '/user_management',{}, {:selected_class => 'active', :wrapper => 'li'} %>
						<% end %>
							<li><a href="http://www.bugherd.com/users/sign_in" target="_blank">Bugherd Login</a></li>
							<li><a href="/feed/<%= current_user.id %>.atom">My Issues RSS Feed</a></li>
					</ul>
				</div><!--/.nav-collapse -->
			</div>
		</div>
	</div>

	<div class="container-fluid">

		<%= yield %>

	</div>
